<launch>
    <include file="$(find openni2_launch)/launch/openni2.launch">
        <arg name="depth_frame_id" value="Camera_Depth_Frame" />
        <arg name="rgb_frame_id" value="Camera_RGB_Frame" />
        <arg name="publish_tf" value="False" />
    </include>
    
    <include file="$(find ada_launch)/launch/jaco.launch" />
    <include file="$(find apriltags)/launch/structureio.launch" />
    
    <node pkg="tf" type="static_transform_publisher" name="static_openni_transform" output="screen" args="0 0 0 0 0 0 Camera_Depth_Frame openni_ir_optical_frame 100"/>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find adapy)/config/calibration.rviz"/>
</launch>
